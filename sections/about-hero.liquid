<div class="about-hero section color-{{ section.settings.color_scheme }}">
  <div class="about-hero__container">
    <div class="about-hero__content">
      <h1 class="about-hero__title">{{ section.settings.title }}</h1>
      <p class="about-hero__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    {% if section.settings.image != blank %}
      <div class="about-hero__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 2000 }}"
          srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 2000 }} 2000w"
          sizes="100vw"
          alt="{{ section.settings.image.alt | escape }}"
          class="about-hero__image"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .about-hero {
    position: relative;
    overflow: hidden;
  }

  .about-hero__container {
    max-width: 100%;
    margin: 0 auto;
    position: relative;
  }

  .about-hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: var(--padding-3xl) var(--padding-lg);
    max-width: 900px;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .about-hero__content {
      padding: var(--padding-5xl) var(--padding-xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-hero__content {
      padding: 120px var(--padding-2xl) 80px;
    }
  }

  .about-hero__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    letter-spacing: 0.02em;
    line-height: 1.1;
    margin: 0 0 var(--margin-lg);
    text-transform: uppercase;
  }

  @media screen and (min-width: 750px) {
    .about-hero__title {
      margin: 0 0 var(--margin-xl);
    }
  }

  .about-hero__subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 300;
    letter-spacing: 0.03em;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
    color: rgb(var(--color-foreground-rgb) / 0.8);
  }

  .about-hero__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 50%;
    overflow: hidden;
    background: rgb(var(--color-foreground-rgb) / 0.05);
  }

  @media screen and (max-width: 749px) {
    .about-hero__image-wrapper {
      padding-bottom: 75%;
    }
  }

  .about-hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        },
        {
          "value": "scheme-2",
          "label": "Scheme 2"
        },
        {
          "value": "scheme-3",
          "label": "Scheme 3"
        }
      ],
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "JACKEETA"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Redefining timeless elegance through exceptional craftsmanship and contemporary design"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}
