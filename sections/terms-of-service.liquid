{% stylesheet %}
  .terms-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .heading-1 {
    font-size: clamp(32px, 4vw, 48px);
    font-weight: 400;
    letter-spacing: -0.02em;
    margin-bottom: 16px;
    text-transform: uppercase;
    text-align: center;
  }

  .terms-updated {
    text-align: center;
    font-size: 14px;
    color: rgba(0, 0, 0, 0.6);
    margin-bottom: 48px;
  }

  .terms-text h2 {
    font-size: 20px;
    font-weight: 500;
    margin-top: 48px;
    margin-bottom: 16px;
  }

  .terms-text p {
    font-size: 16px;
    line-height: 1.8;
    color: rgba(0, 0, 0, 0.8);
    margin-bottom: 16px;
  }

  .terms-text ul {
    margin-left: 24px;
    margin-bottom: 20px;
  }

  .terms-text li {
    font-size: 16px;
    line-height: 1.8;
    color: rgba(0, 0, 0, 0.8);
    margin-bottom: 8px;
  }

  .terms-text a {
    color: #000;
    text-decoration: none;
    border-bottom: 1px solid #000;
    transition: opacity 0.2s ease;
  }

  .terms-text a:hover {
    opacity: 0.6;
  }

  .terms-acknowledgment {
    margin-top: 48px;
    padding: 24px;
    background: #f8f8f8;
    font-weight: 500;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .terms-text h2 {
      margin-top: 32px;
      font-size: 18px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Terms of Service",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Terms of Service"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Terms of Service"
    }
  ]
}
{% endschema %}
