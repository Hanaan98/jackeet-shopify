<div class="about-values section color-{{ section.settings.color_scheme }}">
  <div class="about-values__container spacing-style">
    <h2 class="about-values__heading">{{ section.settings.heading }}</h2>
    <div class="about-values__grid">
      {% for block in section.blocks %}
        <div class="about-values__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="about-values__icon">
              {{ block.settings.icon | image_url: width: 80 | image_tag: loading: 'lazy', alt: block.settings.title }}
            </div>
          {% endif %}
          <h3 class="about-values__title">{{ block.settings.title }}</h3>
          <p class="about-values__text">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .about-values {
    padding-block: var(--padding-3xl);
    background: rgb(var(--color-foreground-rgb) / 0.02);
  }

  @media screen and (min-width: 750px) {
    .about-values {
      padding-block: var(--padding-5xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-values {
      padding-block: 100px;
    }
  }

  .about-values__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding-inline: var(--padding-lg);
  }

  @media screen and (min-width: 750px) {
    .about-values__container {
      padding-inline: var(--padding-xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-values__container {
      padding-inline: var(--padding-2xl);
    }
  }

  .about-values__heading {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 300;
    letter-spacing: 0.02em;
    line-height: 1.2;
    text-align: center;
    margin-bottom: var(--margin-2xl);
    text-transform: uppercase;
  }

  @media screen and (min-width: 750px) {
    .about-values__heading {
      margin-bottom: var(--margin-3xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-values__heading {
      margin-bottom: 60px;
    }
  }

  .about-values__grid {
    display: grid;
    gap: var(--gap-xl);
  }

  @media screen and (min-width: 750px) {
    .about-values__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--gap-2xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-values__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--gap-3xl);
    }
  }

  .about-values__item {
    text-align: center;
    padding: var(--padding-lg);
  }

  @media screen and (min-width: 750px) {
    .about-values__item {
      padding: var(--padding-xl);
    }
  }

  .about-values__icon {
    width: 60px;
    height: 60px;
    margin: 0 auto var(--margin-md);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (min-width: 750px) {
    .about-values__icon {
      width: 80px;
      height: 80px;
      margin: 0 auto var(--margin-lg);
    }
  }

  .about-values__icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .about-values__title {
    font-size: clamp(1.125rem, 1.5vw, 1.375rem);
    font-weight: 400;
    letter-spacing: 0.05em;
    line-height: 1.3;
    margin-bottom: var(--margin-sm);
    text-transform: uppercase;
  }

  @media screen and (min-width: 750px) {
    .about-values__title {
      margin-bottom: var(--margin-md);
    }
  }

  .about-values__text {
    font-size: clamp(0.875rem, 1.2vw, 0.9375rem);
    line-height: 1.7;
    letter-spacing: 0.01em;
    color: rgb(var(--color-foreground-rgb) / 0.75);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About Values",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        },
        {
          "value": "scheme-2",
          "label": "Scheme 2"
        },
        {
          "value": "scheme-3",
          "label": "Scheme 3"
        }
      ],
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OUR VALUES"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "CRAFTSMANSHIP"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Every piece is meticulously crafted with attention to the finest details, ensuring unparalleled quality."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Values",
      "blocks": [
        {
          "type": "value",
          "settings": {
            "title": "CRAFTSMANSHIP",
            "text": "Every piece is meticulously crafted with attention to the finest details, ensuring unparalleled quality."
          }
        },
        {
          "type": "value",
          "settings": {
            "title": "SUSTAINABILITY",
