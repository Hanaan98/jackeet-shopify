{% comment %}
  Men's Collection Section
  Professional collection template for men's jackets
{% endcomment %}

<section class="collection-men" data-section-id="{{ section.id }}" data-section-type="collection-men">
  <div class="container">
    
    {%- if section.settings.show_hero -%}
    <!-- Collection Hero -->
    <div class="collection-hero">
      <div class="collection-hero__content">
        <h1 class="collection-hero__title">{{ section.settings.title }}</h1>
        {%- if section.settings.description != blank -%}
        <div class="collection-hero__description">
          {{ section.settings.description }}
        </div>
        {%- endif -%}
      </div>
      {%- if section.settings.hero_image != blank -%}
      <div class="collection-hero__image">
        <img src="{{ section.settings.hero_image | image_url: width: 1920 }}" 
             alt="{{ section.settings.title }}"
             loading="eager">
      </div>
      {%- endif -%}
    </div>
    {%- endif -%}

    <!-- Category Filter Tabs -->
    {%- if section.settings.show_categories -%}
    <div class="collection-categories">
      <div class="category-tabs">
        <button class="category-tab active" data-category="all">ALL JACKETS</button>
        {%- for block in section.blocks -%}
          {%- if block.type == 'category' -%}
          <button class="category-tab" data-category="{{ block.settings.category_id }}">
            {{ block.settings.category_name }}
          </button>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    {%- endif -%}

    <!-- Products Grid -->
    <div class="collection-products">
      <div class="products-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'product' -%}
          <div class="product-card" data-category="{{ block.settings.product_category }}">
            <div class="product-card__image-wrapper">
              {%- if block.settings.product_image != blank -%}
              <img src="{{ block.settings.product_image | image_url: width: 800 }}" 
                   alt="{{ block.settings.product_title }}"
                   class="product-card__image"
                   loading="lazy">
              {%- endif -%}
              
              {%- if block.settings.product_image_hover != blank -%}
              <img src="{{ block.settings.product_image_hover | image_url: width: 800 }}" 
                   alt="{{ block.settings.product_title }} - alternate view"
                   class="product-card__image product-card__image--hover"
                   loading="lazy">
              {%- endif -%}

              {%- if block.settings.is_new -%}
              <span class="product-badge product-badge--new">NEW</span>
              {%- endif -%}

              {%- if block.settings.is_bestseller -%}
              <span class="product-badge product-badge--bestseller">BESTSELLER</span>
              {%- endif -%}

              <div class="product-card__quick-add">
                <button class="button button--secondary button--small">QUICK VIEW</button>
              </div>
            </div>

            <div class="product-card__info">
              <div class="product-card__category">{{ block.settings.product_category }}</div>
              <h3 class="product-card__title">{{ block.settings.product_title }}</h3>
              {%- if block.settings.product_description != blank -%}
              <p class="product-card__description">{{ block.settings.product_description }}</p>
              {%- endif -%}
              
              <div class="product-card__price">
                {%- if block.settings.compare_price != blank and block.settings.compare_price > block.settings.price -%}
                <span class="price price--compare">${{ block.settings.compare_price }}</span>
                {%- endif -%}
                <span class="price price--current">${{ block.settings.price }}</span>
              </div>

              {%- if block.settings.show_colors -%}
              <div class="product-card__colors">
                <span class="color-label">{{ block.settings.color_count }} Colors</span>
              </div>
              {%- endif -%}
            </div>
          </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <!-- Load More Button -->
    {%- if section.settings.show_load_more -%}
    <div class="collection-load-more">
      <button class="button button--secondary">LOAD MORE JACKETS</button>
    </div>
    {%- endif -%}

  </div>
</section>

<style>
  .collection-men {
    padding: 60px 0 80px;
  }

  .container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Hero Section */
  .collection-hero {
    margin-bottom: 60px;
    text-align: center;
  }

  .collection-hero__content {
    max-width: 800px;
    margin: 0 auto 40px;
  }

  .collection-hero__title {
    font-size: 48px;
    font-weight: 400;
    letter-spacing: 0.02em;
    margin: 0 0 24px;
    text-transform: uppercase;
  }

  .collection-hero__description {
    font-size: 16px;
    line-height: 1.6;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  .collection-hero__image {
    width: 100%;
    height: 400px;
    overflow: hidden;
    border-radius: 8px;
  }

  .collection-hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Category Tabs */
  .collection-categories {
    margin-bottom: 48px;
    border-bottom: 1px solid #e0e0e0;
  }

  .category-tabs {
    display: flex;
    gap: 32px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .category-tab {
    background: none;
    border: none;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.1em;
    padding: 16px 0;
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
    text-transform: uppercase;
  }

  .category-tab::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #000;
    transition: width 0.3s ease;
  }

  .category-tab:hover,
  .category-tab.active {
    color: #000;
  }

  .category-tab.active::after {
    width: 100%;
  }

  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 40px 30px;
  }

  @media screen and (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 30px 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .products-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  /* Product Card */
  .product-card {
    position: relative;
    transition: opacity 0.3s ease;
  }

  .product-card.hidden {
    display: none;
  }

  .product-card__image-wrapper {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
    border-radius: 4px;
    margin-bottom: 16px;
    background: #f5f5f5;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.4s ease;
  }

  .product-card__image--hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .product-card:hover .product-card__image--hover {
    opacity: 1;
  }

  /* Product Badges */
  .product-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 6px 12px;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    background: #000;
    color: #fff;
    z-index: 2;
  }

  .product-badge--bestseller {
    background: #c9a961;
  }

  .product-badge--new {
    background: #000;
  }

  /* Quick Add Button */
  .product-card__quick-add {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 3;
  }

  .product-card:hover .product-card__quick-add {
    opacity: 1;
  }

  .button--small {
    padding: 10px 24px;
    font-size: 12px;
  }

  /* Product Info */
  .product-card__info {
    text-align: center;
  }

  .product-card__category {
    font-size: 11px;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #999;
    margin-bottom: 8px;
  }

  .product-card__title {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 8px;
    letter-spacing: 0.02em;
  }

  .product-card__description {
    font-size: 13px;
    color: #666;
    margin: 0 0 12px;
    line-height: 1.5;
  }

  .product-card__price {
    display: flex;
    gap: 8px;
    justify-content: center;
    align-items: center;
    margin-bottom: 12px;
  }

  .price {
    font-size: 15px;
    font-weight: 500;
  }

  .price--compare {
    text-decoration: line-through;
    color: #999;
  }

  .price--current {
    color: #000;
  }

  .product-card__colors {
    font-size: 12px;
    color: #666;
  }

  .color-label {
    letter-spacing: 0.05em;
  }

  /* Load More Button */
  .collection-load-more {
    margin-top: 60px;
    text-align: center;
  }

  .button {
    display: inline-block;
    padding: 14px 40px;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    border: 2px solid #000;
    background: #000;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .button:hover {
    background: #fff;
    color: #000;
  }

  .button--secondary {
    background: #fff;
    color: #000;
  }

  .button--secondary:hover {
    background: #000;
    color: #fff;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 768px) {
    .collection-men {
      padding: 40px 0 60px;
    }

    .collection-hero__title {
      font-size: 36px;
    }

    .collection-hero__image {
      height: 300px;
    }

    .category-tabs {
      gap: 20px;
      justify-content: flex-start;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .category-tab {
      flex-shrink: 0;
    }
  }
</style>

<script>
  // Category filtering
  document.addEventListener('DOMContentLoaded', function() {
    const categoryTabs = document.querySelectorAll('.category-tab');
    const productCards = document.querySelectorAll('.product-card');

    categoryTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const category = this.getAttribute('data-category');
        
        // Update active tab
        categoryTabs.forEach(t => t.classList.remove('active'));
        this.classList.add('active');

        // Filter products
        productCards.forEach(card => {
          const cardCategory = card.getAttribute('data-category');
          
          if (category === 'all' || cardCategory === category) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
  });
</script>

