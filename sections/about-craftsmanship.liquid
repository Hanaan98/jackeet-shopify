<div class="about-craftsmanship section section--full-width-margin color-{{ section.settings.color_scheme }}">
  <div class="about-craftsmanship__container spacing-style">
    <div class="about-craftsmanship__grid">
      {% if section.settings.image != blank %}
        <div class="about-craftsmanship__image-wrapper">
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            srcset="{{ section.settings.image | image_url: width: 400 }} 400w,
                    {{ section.settings.image | image_url: width: 800 }} 800w,
                    {{ section.settings.image | image_url: width: 1200 }} 1200w"
            sizes="(max-width: 749px) 100vw, 50vw"
            alt="{{ section.settings.image.alt | escape }}"
            class="about-craftsmanship__image"
            loading="lazy"
          />
        </div>
      {% endif %}
      <div class="about-craftsmanship__content">
        <h2 class="about-craftsmanship__heading">{{ section.settings.heading }}</h2>
        <div class="about-craftsmanship__text rte">
          {{ section.settings.text }}
        </div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="button button-primary about-craftsmanship__button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .about-craftsmanship {
    padding-block: var(--padding-3xl);
  }

  @media screen and (min-width: 750px) {
    .about-craftsmanship {
      padding-block: var(--padding-5xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-craftsmanship {
      padding-block: 100px;
    }
  }

  .about-craftsmanship__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding-inline: var(--padding-lg);
  }

  @media screen and (min-width: 750px) {
    .about-craftsmanship__container {
      padding-inline: var(--padding-xl);
    }
  }

  @media screen and (min-width: 990px) {
    .about-craftsmanship__container {
      padding-inline: var(--padding-2xl);
    }
  }

  .about-craftsmanship__grid {
    display: grid;
    gap: var(--gap-2xl);
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .about-craftsmanship__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--gap-4xl);
    }
  }

  .about-craftsmanship__heading {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 300;
    letter-spacing: 0.02em;
    line-height: 1.2;
    margin-bottom: var(--margin-lg);
    text-transform: uppercase;
  }

  @media screen and (min-width: 750px) {
    .about-craftsmanship__heading {
      margin-bottom: var(--margin-xl);
    }
  }

  .about-craftsmanship__text {
    font-size: clamp(0.9375rem, 1.5vw, 1.0625rem);
    line-height: 1.8;
    letter-spacing: 0.01em;
    color: rgb(var(--color-foreground-rgb) / 0.85);
  }

  .about-craftsmanship__text p {
    margin-bottom: var(--margin-md);
  }

  @media screen and (min-width: 750px) {
    .about-craftsmanship__text p {
      margin-bottom: var(--margin-lg);
    }
  }

  .about-craftsmanship__text p:last-child {
    margin-bottom: 0;
  }

  .about-craftsmanship__button {
    margin-top: var(--margin-xl);
    display: inline-flex;
  }

  @media screen and (min-width: 750px) {
    .about-craftsmanship__button {
      margin-top: var(--margin-2xl);
    }
  }

  .about-craftsmanship__image-wrapper {
    position: relative;
    padding-bottom: 125%;
    overflow: hidden;
    background: rgb(var(--color-foreground-rgb) / 0.05);
    order: 2;
  }

  @media screen and (min-width: 990px) {
    .about-craftsmanship__image-wrapper {
      padding-bottom: 140%;
      order: 1;
    }
  }

  .about-craftsmanship__content {
    order: 1;
  }

  @media screen and (min-width: 990px) {
    .about-craftsmanship__content {
      order: 2;
    }
  }

  .about-craftsmanship__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About Craftsmanship",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        },
        {
          "value": "scheme-2",
          "label": "Scheme 2"
        },
        {
          "value": "scheme-3",
          "label": "Scheme 3"
        }
      ],
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE ART OF CRAFTSMANSHIP"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>At JACKEETA, we believe that true luxury lies in the details. Our artisans bring decades of experience to every garment, combining traditional techniques with modern innovation.</p><p>From the selection of premium fabrics to the final finishing touches, each step of our process is guided by an unwavering commitment to excellence. The result is clothing that not only looks exceptional but feels extraordinary.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "EXPLORE COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "About Craftsmanship"
    }
  ]
}
{% endschema %}
